<%= form_with model: @task , class: "myform" do |f| %>
  <h1>Edit task</h1>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <p><p>
  <div class="form-group">
    <%= f.label :details, "Details" %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <p><p>
  <div class="form-group">
    <%= f.label :details, "Completed" %>
    <%= f.check_box :completed %>
  </div>
  <p><p>
  <%= f.submit "Update Task", class: "btn btn-primary" %>
<% end %>
