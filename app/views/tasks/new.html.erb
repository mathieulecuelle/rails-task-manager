<%= form_with model: @task , class: "myform" do |f| %>
  <h1>New task</h1>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <p><p>
  <div class="form-group">
    <%= f.label :details, "Details" %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <p><p>
  <%= f.submit "Create Task", class: "btn btn-primary" %>
  <p><p>
  <%= link_to "Back to list", index_path %>
<% end %>
